<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialAlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Dark.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Dark.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Dark.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Dark.Button</item>
    </style>

    <style name="MaterialAlertDialog.Dark.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialog.Dark.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="MaterialAlertDialog.Dark.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#0095F6</item>
        <item name="rippleColor">#330095F6</item>
    </style>
</resources>
