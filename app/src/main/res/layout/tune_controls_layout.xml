<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Brightness -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brightness"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/brightnessSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="-1.0"
        android:valueTo="1.0"
        android:value="0.0"
        app:labelBehavior="floating"/>

    <!-- Contrast -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contrast"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/contrastSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="0.5"
        android:valueTo="1.5"
        android:value="1.0"
        app:labelBehavior="floating"/>

    <!-- Saturation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saturation"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/saturationSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="0.0"
        android:valueTo="2.0"
        android:value="1.0"
        app:labelBehavior="floating"/>

    <!-- Sharpness -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sharpness"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sharpnessSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        android:value="0.0"
        app:labelBehavior="floating"/>

    <!-- Highlights -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/highlights"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/highlightsSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="-1.0"
        android:valueTo="1.0"
        android:value="0.0"
        app:labelBehavior="floating"/>

    <!-- Shadows -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shadows"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/shadowsSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="-1.0"
        android:valueTo="1.0"
        android:value="0.0"
        app:labelBehavior="floating"/>

    <!-- Temperature -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/temperatureSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:valueFrom="-1.0"
        android:valueTo="1.0"
        android:value="0.0"
        app:labelBehavior="floating"/>

</LinearLayout>
